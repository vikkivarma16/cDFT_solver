# # # .... PRELIMINARY SETTINGS .... # # #

# choose mode for the calculation of free energy:
#   - "standard" → uses perturbative mean-field
#   - "advanced" → uses FMT-integrated mean-field
mode = standard


# choose method for the calculation of mean-field free energy:
#   - "smf" → Standard Mean Field
#   - "emf" → Enhanced Mean Field
#   - "zdl" → Zero-Dimensional Cavity Limit
method = emf


# choose mode for the calculation of integrated strength:
#   - "rdf"      → uses supplied RDF data
#   - "uniform"  → uniform mean-field integration
#   - "void"     → void data or user-supplied information
integrated_strength_kernel = rdf
supplied_data = no


# choose ensemble type:
#   - "isochores" → canonical ensemble (fixed total density)
#   - "isochem"   → grand canonical ensemble (for coexistence)
ensemble = isochores



# # # .... THERMODYNAMIC PROPERTIES (for canonical ensemble) .... # # #
species_fraction: a = 0.27
species_fraction: b = 0.27



# # # .... SOLUTION PARAMETERS .... # # #
number_of_phases = 2
heterogeneous_pair = ab
total_density_bound = 2.0
# note: (number_of_phases - 1) = number of heterogeneous pairs
# too many pairs → over-constrained system
# too few pairs → degenerate coexistence densities



# # # .... UNIT CONVERSION FOR INPUT PARAMETERS .... # # #
temperature = 300.0     # in Kelvin
length = 200.0          # in Angstroms



# # # .... PARTICLE PROPERTIES AND INTERACTIONS .... # # #
particle_types = "cgrained"
species = a, b

# for identical pairs, max 3 kinds of potentials are supported
# reduce system configuration to ≤ 3 potential types per pair

# --- primary interactions ---
interaction: aa = gs,  sigma = 1.414, cutoff = 3.5, epsilon = 2.0
interaction: ab = gs,  sigma = 1.414, cutoff = 3.5, epsilon = 2.5
#interaction: ac = ma,  sigma = 1.0, cutoff = 3.5, epsilon = 0.1787, m = 12, n = 6, lambda = 0.477246
#interaction: ac = gs,  sigma = 1.000, cutoff = 3.5, epsilon = -1.6
interaction: bb = gs,  sigma = 1.414, cutoff = 3.5, epsilon = 2.0
#interaction: bc = gs,  sigma = 1.414, cutoff = 3.5, epsilon = 0.0
#interaction: cc = hc,  sigma = 0.97003, cutoff = 3.5, epsilon = 2.0

# --- secondary interactions ---
#interaction: aa = ghc,  sigma = 1.02, cutoff = 3.2, epsilon = 2.0
#interaction: bb = ghc,  sigma = 0.973004, cutoff = 3.2, epsilon = 2.0



# # # .... TASK SELECTION .... # # #
# choose "inhomogeneous" for wall profile; "bulk" for coexistence densities
task = bulk



# # # .... BOX AND CONFINEMENT PROPERTIES .... # # #
space_dimension = 1
space_confinement = abox

# confinement box parameters (for 1D system)
box_extension = 60, 25, 60
box_points = 200, 100, 100
# note: x and y extensions are pseudo in 1D systems

aperiodicity_blocker = wall



# # # .... WALL CONFIGURATION .... # # #
# possible values: "none", "na", "NA" if no wall confinement
wall: particles = c
wall: position = (0, 0, 0), (60, 0, 0)
wall: orientation = (1, 0, 0), (1, 0, 0)

# wall–particle interactions
wall_interaction: ac = custom_3,  sigma = 1.0, cutoff = 3.2, epsilon = 0.1
wall_interaction: bc = custom_3,  sigma = 1.0, cutoff = 3.2, epsilon = 0.1
#wall_interaction: cd = custom_3,  sigma = 1.0, cutoff = 3.2, epsilon = 0.1



# # # .... PROFILE COMPUTATION PARAMETERS .... # # #
# alpha: mixing coefficient for Picard iteration
alpha = 0.001

# iteration limits and output control
iteration_max = 20000
log_period = 20

